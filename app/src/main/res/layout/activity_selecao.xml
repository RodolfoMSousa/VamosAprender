<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_login_blur_screen"
    tools:context=".app.activity.SelecaoActivity">


    <ImageView
        android:id="@+id/selecaoOperacoes"
        android:layout_width="265dp"
        android:layout_height="148dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467"
        app:srcCompat="@drawable/selecaooperacoes" />

    <ImageView
        android:id="@+id/selecaoTrilha"
        android:layout_width="267dp"
        android:layout_height="137dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selecaoOperacoes"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selecaotrilha" />

    <TextView
        android:id="@+id/selecaoText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:text="JOGO OPERAÇÕES"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/selecaoOperacoes"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selecaoText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:text="JOGO TRILHA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/selecaoTrilha"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>